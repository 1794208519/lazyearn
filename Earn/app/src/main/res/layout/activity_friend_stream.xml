<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    tools:context="vicmob.micropowder.ui.activity.QQFriendStreamActivity">
    <RelativeLayout
        android:id="@+id/rl_title_fsf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_centerHorizontal="true"
        android:background="@color/deep_orange">

        <ImageView
            android:id="@+id/iv_back_fsf"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:background="@drawable/back_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="一键加QQ群友"
            android:textColor="@color/white"
            android:textSize="@dimen/x19"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_open_fsf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        android:layout_below="@+id/rl_title_fsf"
        android:background="@drawable/open_back_ground"
        android:padding="@dimen/x15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="QQ辅助"
            android:textColor="#FF803F"
            android:textSize="@dimen/x20"/>


        <com.sevenheaven.iosswitch.ShSwitchView
            android:id="@+id/iv_begin_fsf"
            android:layout_width="@dimen/x68"
            android:layout_height="@dimen/x38"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            app:tintColor="@color/deep_orange"/>

    </RelativeLayout>

      <TextView
          android:id="@+id/tv_remarks_fsf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/rl_open_fsf"
          android:layout_centerHorizontal="true"
          android:layout_margin="@dimen/x20"
          android:text="备注：请不要设置起始群的位置超过总群数，并且确保没有群公告"
          android:textColor="#B1B1B1"
          android:textSize="@dimen/x16"/>

    <RelativeLayout
        android:id="@+id/rl_content_fsf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x180"
        android:layout_below="@+id/tv_remarks_fsf"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"

        android:background="@drawable/back_ground_content">

        <ImageView
            android:id="@+id/iv_icon_fsf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x35"
            android:src="@drawable/group"/>

        <TextView
            android:id="@+id/tv_content_fsf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@+id/iv_icon_fsf"
            android:text="| 设置起始群："
            android:textColor="@color/gray_text"
            android:textSize="@dimen/x18"/>

        <EditText
            android:id="@+id/et_content_fsf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x35"
            android:layout_toRightOf="@+id/tv_content_fsf"
            android:text="1"
            android:inputType="number"
            android:imeOptions="actionGo"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/x16"
            android:theme="@style/myEditText"/>

    </RelativeLayout>

    <Button
        android:id="@+id/but_begin_fsf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x45"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:background="@drawable/begin_button"
        android:text="开始添加"
        android:textColor="#fff"
        android:textSize="@dimen/x18"/>


</RelativeLayout>
