    <RelativeLayout
        android:id="@+id/rl_content_fsf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x180"
        android:layout_below="@+id/rl_open_fsf"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x45"
        android:layout_marginTop="@dimen/x50"
        android:background="@drawable/back_ground_content">

        <ImageView
            android:id="@+id/iv_icon_fsf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x35"
            android:src="@drawable/group"/>

        <TextView
            android:id="@+id/tv_content_fsf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@+id/iv_icon_fsf"
            android:text="| 设置起始群："
            android:textColor="@color/gray_text"
            android:textSize="@dimen/x18"/>

        <EditText
            android:id="@+id/et_content_fsf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x35"
            android:layout_toRightOf="@+id/tv_content_fsf"
            android:text="1"
            android:inputType="number"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/x17"
            android:theme="@style/myEditText"/>

    </RelativeLayout>

    <Button
        android:id="@+id/but_begin_fsf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x50"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:background="@drawable/begin_button"
        android:text="开始添加"
        android:textColor="#fff"
        android:textSize="@dimen/x18"/>

</RelativeLayout>
