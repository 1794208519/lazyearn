<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/back_ground">
    <RelativeLayout
        android:id="@+id/rl_title_akeychat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_centerHorizontal="true"
        android:background="@color/deep_orange">

        <ImageView
            android:id="@+id/iv_back_akeychat"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:background="@drawable/back_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="一键发消息"
            android:textColor="@color/white"
            android:textSize="@dimen/x19"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_open_akeychat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title_akeychat"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/open_back_ground"
        android:padding="@dimen/x15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="QQ辅助"
            android:textColor="#FF803F"
            android:textSize="@dimen/x20"/>


        <com.sevenheaven.iosswitch.ShSwitchView
            android:id="@+id/iv_begin_akeychat"
            android:layout_width="@dimen/x68"
            android:layout_height="@dimen/x38"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            app:tintColor="@color/deep_orange"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_remarks_akeychat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_open_akeychat"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/x15"
        android:text="备注：一键发消息不能与其他服务同时工作"
        android:textColor="#B1B1B1"
        android:textSize="@dimen/x17"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_akeychat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_akeychat"
        android:layout_below="@id/tv_remarks_akeychat"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginBottom="@dimen/x50"
        android:overScrollMode="always"
        >
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_akeychat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_edit_akeychat"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginBottom="@dimen/x20"
        android:background="@drawable/begin_button"
        android:text="一键发消息"
        android:textColor="#fff"
        android:textSize="@dimen/x18"/>

    <Button
        android:id="@+id/btn_edit_akeychat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x38"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:background="@drawable/begin_button"
        android:text="添加打招呼内容"
        android:textColor="#fff"
        android:textSize="@dimen/x18"/>

</RelativeLayout>