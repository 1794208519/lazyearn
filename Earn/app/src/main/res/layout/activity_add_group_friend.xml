<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/back_ground">

    <RelativeLayout
        android:id="@+id/rl_title_agf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head"
        android:layout_centerHorizontal="true"
        android:background="@color/deep_orange">

        <ImageView
            android:id="@+id/iv_back_agf"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="一键加群友"
            android:textColor="@color/white"
            android:textSize="@dimen/x18"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_open_agf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title_agf"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/open_back_ground"
        android:padding="@dimen/x15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="微信辅助"
            android:textColor="#FF803F"
            android:textSize="@dimen/x20"/>


        <com.sevenheaven.iosswitch.ShSwitchView
            android:id="@+id/iv_begin_agf"
            android:layout_width="@dimen/x68"
            android:layout_height="@dimen/x38"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            app:tintColor="@color/deep_orange"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_remarks_agf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_open_agf"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/x20"
        android:text="@string/group_friend"
        android:textColor="#B1B1B1"
        android:textSize="@dimen/x17"/>

    <RelativeLayout
        android:id="@+id/rl_content_agf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x180"
        android:layout_below="@+id/tv_remarks_agf"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:background="@drawable/back_ground_content">

        <ImageView
            android:id="@+id/iv_icon_agf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x35"
            android:src="@drawable/group"/>

        <TextView
            android:id="@+id/tv_content_agf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@+id/iv_icon_agf"
            android:text="| 设置起始群："
            android:textColor="@color/gray_text"
            android:textSize="@dimen/x18"/>

        <EditText
            android:id="@+id/et_content_agf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x35"
            android:imeActionLabel="开始"
            android:imeOptions="actionGo"
            android:layout_toRightOf="@+id/tv_content_agf"
            android:inputType="number"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/x16"
            android:theme="@style/myEditText"/>

    </RelativeLayout>

    <Button
        android:id="@+id/but_begin_agf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:layout_marginBottom="@dimen/x45"
        android:background="@drawable/begin_button"
        android:text="开始添加"
        android:textColor="#fff"
        android:textSize="@dimen/x18"/>

</RelativeLayout>