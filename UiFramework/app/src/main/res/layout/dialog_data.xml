<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="22dp"
            android:text="输入内容"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="22dp"
            android:src="@mipmap/friend" />

        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="290dp"
            android:layout_alignBottom="@+id/but_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="65dp"
            android:background="@drawable/bg_dialog_content_in">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="@null"
                android:inputType="number" />

        </RelativeLayout>

        <Button
            android:id="@+id/but_content"
            android:layout_width="260dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:background="@drawable/begin_button"
            android:text="确认内容"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>
</RelativeLayout>