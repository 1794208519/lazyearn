<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="#FFF">
        <TextView
            android:id="@+id/dialog_oneLine_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="选择打招呼人数:"
            android:textSize="20sp"
            />
        <com.widget.PickerView
            android:id="@+id/dialog_oneLine_wheel"
            android:layout_below="@+id/dialog_oneLine_tv"
            android:layout_centerInParent="true"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:layout_below="@+id/dialog_oneLine_wheel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/dialog_oneLine_no"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:text="取消"
                />

            <Button
                android:id="@+id/dialog_oneLine_yes"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_toEndOf="@+id/dialog_oneLine_no"
                android:text="确定"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>